generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Utenti del sistema
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  phone         String?
  role          String    @default("WORKER")  // ADMIN, OPERATOR, WORKER, HOUSEKEEPER
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relazioni
  assignedActivities  Activity[]    @relation("AssignedTo")
  createdActivities   Activity[]    @relation("CreatedBy")
  attendances         Attendance[]
  notifications       Notification[]

  @@map("users")
}

// Location (B&B/Appartamenti)
model Location {
  id          String   @id @default(cuid())
  name        String
  address     String
  city        String
  postalCode  String?
  phone       String?
  email       String?
  description String?
  capacity    Int      @default(1)
  rooms       Int      @default(1)
  bathrooms   Int      @default(1)
  hasWifi     Boolean  @default(true)
  hasParking  Boolean  @default(false)
  hasAC       Boolean  @default(false)
  notes       String?
  isActive    Boolean  @default(true)
  qrCode      String   @unique @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relazioni
  activities   Activity[]
  attendances  Attendance[]
  inventories  Inventory[]

  @@map("locations")
}

// Attività
model Activity {
  id           String    @id @default(cuid())
  title        String
  description  String?
  type         String    @default("OTHER")      // MAINTENANCE, LAUNDRY, CLEANING, EMERGENCY, INSPECTION, OTHER
  status       String    @default("PENDING")    // PENDING, IN_PROGRESS, COMPLETED, CANCELLED
  priority     String    @default("MEDIUM")     // LOW, MEDIUM, HIGH, URGENT
  scheduledAt  DateTime?
  startedAt    DateTime?
  completedAt  DateTime?
  dueDate      DateTime?
  notes        String?
  cost         Float?

  // Relazioni
  locationId   String
  location     Location  @relation(fields: [locationId], references: [id])

  assignedToId String?
  assignedTo   User?     @relation("AssignedTo", fields: [assignedToId], references: [id])

  createdById  String
  createdBy    User      @relation("CreatedBy", fields: [createdById], references: [id])

  checklistItems ChecklistItem[]
  attendances  Attendance[]

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([locationId])
  @@index([assignedToId])
  @@index([status])
  @@index([type])
  @@map("activities")
}

// Items della checklist
model ChecklistItem {
  id          String   @id @default(cuid())
  text        String
  isCompleted Boolean  @default(false)
  order       Int      @default(0)

  activityId  String
  activity    Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("checklist_items")
}

// Template di flow attività
model ActivityTemplate {
  id          String   @id @default(cuid())
  name        String
  description String?
  type        String   @default("OTHER")      // MAINTENANCE, LAUNDRY, CLEANING, EMERGENCY, INSPECTION, OTHER
  role        String   @default("WORKER")     // ADMIN, OPERATOR, WORKER, HOUSEKEEPER
  isDefault   Boolean  @default(false)

  steps       TemplateStep[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("activity_templates")
}

// Steps del template
model TemplateStep {
  id          String           @id @default(cuid())
  title       String
  description String?
  order       Int
  isRequired  Boolean          @default(true)

  templateId  String
  template    ActivityTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@map("template_steps")
}

// Registro presenze
model Attendance {
  id          String    @id @default(cuid())
  checkInAt   DateTime  @default(now())
  checkOutAt  DateTime?
  latitude    Float?
  longitude   Float?
  notes       String?

  userId      String
  user        User      @relation(fields: [userId], references: [id])

  locationId  String
  location    Location  @relation(fields: [locationId], references: [id])

  activityId  String?
  activity    Activity? @relation(fields: [activityId], references: [id])

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([locationId])
  @@index([activityId])
  @@map("attendances")
}

// Inventario
model Inventory {
  id          String   @id @default(cuid())
  name        String
  category    String
  quantity    Int      @default(0)
  minQuantity Int      @default(0)
  unit        String   @default("pz")

  locationId  String
  location    Location @relation(fields: [locationId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("inventories")
}

// Notifiche
model Notification {
  id        String   @id @default(cuid())
  title     String
  message   String
  isRead    Boolean  @default(false)
  type      String   @default("info")
  link      String?

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("notifications")
}
